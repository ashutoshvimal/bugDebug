<%- include('../partials/header') %>



<div class="container" style="width: 50%; margin: auto;">
    <div class="container" style="text-align: center;">
        <h1>Edit your question</h1>
    </div>
    <form action="/post/<%= post._id %>?_method=PUT" method="POST"  enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*" value="<%= post.image %>">
        </div>
        <div class="mb-3">
            <label for="body" class="form-label">Question details</label>
            <textarea name="content" id="body" cols="20" rows="10" class="form-control"><%= post.content %></textarea>
            <small id="commentHelp" class="form-text text-muted">Please enter in html format</small>
        </div>
        <input class="btn btn-lg btn-primary" type="submit" value="Submit">
    </form>
</div>


<%- include('../partials/footer') %>